
	<%= simple_form_for @tweet, :html => { :class => 'form-horizontal' } do |f| %>
	<div class="form">
	  <%= f.input :content, input_html: { maxlength: 140 } %>
	  <div class="form-actions">
	    <%= f.button :submit, :class => 'btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                root_path, :class => 'btn' %>
	  </div>
	 </div>
	<% end %>

