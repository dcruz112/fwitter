<%= simple_form_for @tweet, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :content, label: "Reply", input_html: { maxlength: 140, value: "@#{Tweet.find(params[:id]).user.handle}" } %>
  <%= f.hidden_field :is_reply, value: true %>
  <%= f.hidden_field :reply_id, value: params[:id] %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tweets_path, :class => 'btn' %>
  </div>
<% end %>
