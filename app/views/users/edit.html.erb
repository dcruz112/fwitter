<div class="edit-user" style="margin-left: 300px;"><h1>Edit Profile</h1>

<%= render 'form_edit' %>

<%= link_to 'Show', @user %> |
<% if !@user.default %>
	<%= link_to 'Set as Default', default_path(@user) %> |
<% end %>
<% if @user.default %>
	<%= link_to 'Delete Profile', edit_user_path(@user), data: { confirm: 
		'Warning: Please select a new default user before deleting this account' } %> |
<% else %>
	<%= link_to 'Delete Profile', @user, method: :delete, data: { confirm: 
		'Warning: This will permanently delete your account and all of your tweets.' } %> |
<% end %>

<%= link_to 'Back', users_path %>
</div>