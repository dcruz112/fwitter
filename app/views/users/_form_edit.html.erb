    <h1>You can change yourself here,<br>but please don't change for our sake.<br>We love you just the way you are.</h1> 

<%= simple_form_for @user do |f| %>
    <%= f.input :first_name, input_html: { maxlength: 20 }, label: 'First Name'%>
    <%= f.input :last_name, input_html: { maxlength: 20 }, label: 'Last Name' %>
    <%= f.input :email, input_html:{ maxlength: 30 }, label: 'E-mail' %>
    <%= f.input :handle, input_html: { maxlength: 20 }, label: 'Handle' %>
    <%= f.input :biography, input_html: { maxlength: 160 }, label: 'Biography' %>
    <%= f.input :current_location, input_html:{ maxlength: 20 }, label: 'Current Location' %>
    <%= f.file_field :image_url, label: "Profile Image" %>
    <%= image_tag(@user.image_url, class: 'tweet-thumbnail') %>
    <%= f.hidden_field :college, input_html:{ maxlength: 2 }, label: 'College' %><br>
	<div class="submit-button"><%= f.submit 'Save Changes', class: "btn btn-large btn-primary" %></div>
<% end %>