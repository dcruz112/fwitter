


<%= simple_form_for @user do |f| %>
  
  <br>

    <%= f.input :first_name, input_html: { maxlength: 20 }, label: 'First Name'%>
    <%= f.input :last_name, input_html: { maxlength: 20 }, label: 'Last Name' %>
    <%= f.input :email, input_html:{ maxlength: 30 }, label: 'E-mail' %>
    <%= f.input :handle, input_html: { maxlength: 15 }, label: 'Handle' %>
    <%= f.input :biography, input_html: { maxlength: 160 }, label: 'Biography' %>
    <%= f.input :current_location, input_html:{ maxlength: 20 }, label: 'Current Location' %>
    <%= f.input :college, input_html:{ maxlength: 2 }, label: 'College' %>
    <%= f.submit 'Save Changes' %>

<% end %>

