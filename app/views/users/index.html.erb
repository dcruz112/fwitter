
<div class="list-of-users" style= "margin-left: 300px;">
<h1>Administrator: List of Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Netid</th>
      <th>Handle</th>
      <th>Biography</th>
      <th>Current location</th>
      <th>E-mail</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if  user.netid == session[:cas_user] %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.netid %></td>
          <td><%= user.handle_at %></td>
          <td><%= user.biography %></td>
          <td><%= user.current_location %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show Tweets', user %></td>
          <td><%= link_to 'Switch User', user %></td>
          <td><%= link_to 'Set as Default', default_user_path %></td>
          <td><%= link_to 'Edit Profile', edit_user_path(user) %></td>
          <td><%= link_to 'Delete Profile', user, method: :delete, data: 
                  { confirm: 'Warning: This will permanently delete your profile and tweets.' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sign up!', new_user_path %>
</div>
